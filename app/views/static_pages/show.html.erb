<% if @length_mismatch != "" %>
 <%= @length_mismatch %>
<% else %>
  <%= @title %>
  <br></br>
  <% incr_p = 1 %>
  <% incr_l = 2 %>
  <% i = 0 %>
  <% begin %>
    <%= "---------- #{@hedsub[i]} ----------" %>
    <br></br>
    <%= @hedsub[i + incr_p] %>
    <br></br>
    <%#= @divline %>
    <% i += incr_l %>
  <% end while i < @hedsub.length %>
<% end %>